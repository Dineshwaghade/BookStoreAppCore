@model BookStoreAppCore.Models.BookModel

@{
    ViewData["Title"] = "EditBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <h4>BookModel</h4>
        <hr />
        <form asp-action="EditBook" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <div class="row">
                    <label asp-for="Title" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label asp-for="Description" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label asp-for="Author" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label asp-for="Category" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label asp-for="TotalPages" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="TotalPages" class="form-control" />
                        <span asp-validation-for="TotalPages" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label asp-for="LanguageId" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.Languages ">
                            <option value="">Select Language</option>
                        </select>
                        <span asp-validation-for="LanguageId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label asp-for="Price" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CoverImageURL" />
            </div>
            <div class="form-group">
                <div class="row">
                    <label asp-for="CoverImage" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <div class="custom-file">
                            <input asp-for="CoverImage" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="CoverImage" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CreatedOn" class="form-control" />
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-10">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-controller="book" asp-action="booklist" class="btn btn-primary"> Cancel</a>
                    </div>
                </div>
            </div>
        </form>
            

    </div>
